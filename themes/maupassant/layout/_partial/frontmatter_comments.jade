article.post.comment-box
  h2 comments
  - var comments = page.comment_list
  if !comments
    - comments = theme.frontmatter_comments.default

  for comment in comments
    article.comment
      - var style
      - var is_author = comment.url === theme.profile.url
      if is_author
        - comment.color = theme.frontmatter_comments.color
      if comment.color
        - var shadow = "box-shadow: 0px -4px 0px " + comment.color + " inset;"
        - var border = "border-bottom-color:" + comment.color + ";"
        - style = border + shadow;
      blockquote !{comment.comment.replace(/\n/g, '<br/>')}
        | â€” 
        a.commenter(href=comment.url style=style) #{comment.name}

